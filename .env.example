# EduBot Configuration Template
# This is an example file. Copy to .env and fill in your actual values.

# ===== DATABASE =====
# MySQL database connection string
DATABASE_URL=mysql+mysqlconnector://username:password@hostname:port/database_name

# ===== FASTAPI =====
DEBUG=False
API_TITLE=EduBot API
API_VERSION=1.0.0
API_PORT=8000

# ===== PAYSTACK (Payment Integration) =====
# Get from https://dashboard.paystack.com/settings/api-keys-and-webhooks
PAYSTACK_PUBLIC_KEY=pk_live_your_public_key
PAYSTACK_SECRET_KEY=sk_live_your_secret_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret
PAYSTACK_WEBHOOK_URL=https://yourdomain.com/api/payments/webhook/paystack

# ===== WHATSAPP (Cloud API) =====
# Get from https://www.meta.com/developers/apps/
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_PHONE_NUMBER=+234700000000
WHATSAPP_WEBHOOK_TOKEN=your_webhook_token

# ===== FILE UPLOAD =====
MAX_FILE_SIZE_MB=5
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
UPLOADS_DIR=uploads

# ===== SECURITY =====
# Generate a strong secret key for production
SECRET_KEY=generate-a-long-random-string-here
ALGORITHM=HS256
ADMIN_ORIGIN=https://youradmindomain.com
ALLOW_ORIGINS=https://youradmindomain.com,https://yourapidomain.com
HTTPS_ONLY=True
SESSION_TIMEOUT_MINUTES=60
RATE_LIMIT_PER_MINUTE=60

# ===== LOGGING =====
LOG_LEVEL=WARNING
LOG_FILE=logs/chatbot.log

# ===== SENTRY (Error Tracking - Optional) =====
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== NEXT.JS ADMIN UI =====
NEXT_PUBLIC_API_URL=https://yourapidomain.com
NEXT_PUBLIC_APP_NAME=EduBot
