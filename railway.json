{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT --reload",
    "restartPolicyMaxRetries": 5
  },
  "env": {
    "API_TITLE": "EduBot API",
    "API_VERSION": "1.0.0",
    "API_PORT": "8000",
    "ENVIRONMENT": "production",
    "DEBUG": "False",
    "HTTPS_ONLY": "True",
    "SECRET_KEY": {
      "description": "Your app's secret key for signing tokens",
      "value": ""
    },
    "ADMIN_PASSWORD": {
      "description": "Admin login password",
      "value": ""
    },
    "WHATSAPP_API_KEY": {
      "description": "WhatsApp Cloud API access token",
      "value": ""
    },
    "WHATSAPP_PHONE_NUMBER_ID": {
      "description": "WhatsApp phone number ID",
      "value": ""
    },
    "WHATSAPP_BUSINESS_ACCOUNT_ID": {
      "description": "WhatsApp business account ID",
      "value": ""
    },
    "WHATSAPP_PHONE_NUMBER": {
      "description": "WhatsApp bot phone number (e.g., +1234567890)",
      "value": ""
    },
    "WHATSAPP_WEBHOOK_TOKEN": {
      "description": "Webhook verification token for WhatsApp",
      "value": ""
    },
    "PAYSTACK_PUBLIC_KEY": {
      "description": "Paystack public key",
      "value": ""
    },
    "PAYSTACK_SECRET_KEY": {
      "description": "Paystack secret key",
      "value": ""
    },
    "PAYSTACK_WEBHOOK_SECRET": {
      "description": "Paystack webhook secret",
      "value": ""
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "Frontend API endpoint (e.g., https://api.example.com)",
      "value": ""
    }
  }
}
