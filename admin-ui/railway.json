{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfile": "Dockerfile",
    "buildArgs": {
      "NEXT_PUBLIC_API_URL": "${{ env.NEXT_PUBLIC_API_URL }}"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm start",
    "restartPolicyMaxRetries": 5
  }
}
